{
  "version": 3,
  "vendor": {
    "lch-farrow": {
      "autoFormat": true
    }
  },
  "configurePresets": [
    {
      "name": "linux-nvidia-opencl",
      "displayName": "Linux: NVIDIA RTX 3060 + OpenCL 3.0 + clFFT",
      "description": "Ubuntu/Linux with NVIDIA RTX 3060, OpenCL 3.0 and clFFT support",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/linux-nvidia",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++",
        "ENABLE_CUDA": "OFF",
        "ENABLE_OPENCL": "ON",
        "TYPE_GPU": "NVIDIA-RTX3060",
        "CUDA_ARCH": "auto"
      },
      "environment": {
        "PATH": "$penv{PATH}"
      }
    },
    {
      "name": "linux-nvidia-debug",
      "displayName": "Linux: NVIDIA RTX 3060 + OpenCL 3.0 (Debug)",
      "description": "Debug build with NVIDIA RTX 3060 and OpenCL",
      "inherits": "linux-nvidia-opencl",
      "binaryDir": "${sourceDir}/build/linux-nvidia-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-amd-opencl",
      "displayName": "Linux: AMD AI100 + OpenCL 3.0 + clFFT (placeholder)",
      "description": "Ubuntu/Linux with AMD AI100, OpenCL 3.0 and clFFT (configure when ready)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/linux-amd",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++",
        "ENABLE_CUDA": "OFF",
        "ENABLE_OPENCL": "ON",
        "TYPE_GPU": "AMD-AI100",
        "CUDA_ARCH": "auto"
      },
      "environment": {
        "ROCM_HOME": "/opt/rocm",
        "LD_LIBRARY_PATH": "/opt/rocm/lib:$penv{LD_LIBRARY_PATH}",
        "PATH": "/opt/rocm/bin:$penv{PATH}"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-nvidia-release",
      "configurePreset": "linux-nvidia-opencl",
      "inheritConfigureEnvironment": true,
      "jobs": 8,
      "targets": []
    },
    {
      "name": "linux-nvidia-debug-build",
      "configurePreset": "linux-nvidia-debug",
      "inheritConfigureEnvironment": true,
      "jobs": 4,
      "targets": []
    },
    {
      "name": "linux-amd-release",
      "configurePreset": "linux-amd-opencl",
      "inheritConfigureEnvironment": true,
      "jobs": 8,
      "targets": []
    }
  ]
}
