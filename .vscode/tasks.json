{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Сборка проекта через CMake (Linux)"
        },
        {
            "label": "build (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "-j",
                "$(nproc)"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Сборка для Linux (использует CMAKE_BUILD_TYPE из конфигурации)"
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DENABLE_OPENCL=ON"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Конфигурация CMake"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Очистка директории build"
        },
        {
            "label": "rebuild",
            "dependsOn": [
                "clean",
                "configure",
                "build"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Полная пересборка проекта"
        }
    ]
}
