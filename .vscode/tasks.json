{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/linux-nvidia-debug",
                "-j8"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Сборка проекта через CMake (Linux)"
        },
        {
            "label": "build (Linux)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build/linux-nvidia-debug",
                "-j8"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Сборка для Linux (Debug с OpenCL)"
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "linux-nvidia-debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Конфигурация CMake с preset linux-nvidia-debug"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build/linux-nvidia-debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Очистка директории build/linux-nvidia-debug"
        },
        {
            "label": "rebuild",
            "dependsOn": [
                "clean",
                "configure",
                "build"
            ],
            "dependsOrder": "sequence",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "focus": false,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Полная пересборка проекта"
        }
    ]
}
